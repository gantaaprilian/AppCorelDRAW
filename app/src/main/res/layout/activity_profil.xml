<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Profil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/bgstudent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Ganta Tri Aprilian"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="15520241010"
            android:textAlignment="center"
            android:textSize="15dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:alignmentMode="alignMargins"
                    android:padding="12dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imagefacebook"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="12dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="30dp"
                        app:srcCompat="@drawable/facebook"
                        android:foreground="?android:attr/selectableItemBackground"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imagewhatsapp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="12dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        app:srcCompat="@drawable/whatsapp"
                        android:foreground="?android:attr/selectableItemBackground"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/imageinstagram"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="12dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginEnd="30dp"
                        app:srcCompat="@drawable/instagram"
                        android:foreground="?android:attr/selectableItemBackground"/>
                </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Tentang Saya"
                        android:textAlignment="viewStart"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Mahasiswa Program Studi Pendidikan Teknik Informatika S1, Jurusan Pendidikan Teknik Elektronika dan Informatika, Fakultas Teknik, Universitas Negeri Yogyakarta, Angkatan 2015."
                        android:textAlignment="viewStart"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Tentang Aplikasi"
                        android:textAlignment="viewStart"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Aplikasi ini merupakan sebuah aplikasi Media Pembelajaran berbasis Android yang membahas tentang Dasar-Dasar Pengenalan CorelDRAW Graphic Suite X7 kelas X SMK. Aplikasi ini menyediakan materi video dan juga latihan soal sesuai dengan Kompetensi Dasar yang ada. Dengan adanya aplikasi ini, diharapkan pengguna bisa belajar dimanapun dan kapanpun pengguna itu berada."
                        android:textAlignment="viewStart"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Referensi Materi"
                        android:textAlignment="viewStart"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="1. Buku Kupas Tuntas CorelDRAW Graphic Suite X7
                                      \n2. Buku Pasti Bisa!! Belajar Sendiri CorelDRAW X7
                                      \n3. Buku CorelDRAW X7 untuk Pemula"
                        android:textAlignment="viewStart"
                        android:textSize="15dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>